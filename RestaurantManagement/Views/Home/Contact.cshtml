@{
    ViewData["Title"] = "Liên hệ";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4">Liên hệ với chúng tôi</h2>

    <div class="row">
        <div class="col-md-6">
            <h5>Địa chỉ</h5>
            <p>123 Đường Ẩm Thực, Quận 1, TP. Hồ Chí Minh</p>

            <h5>Số điện thoại</h5>
            <p>(+84) 123 456 789</p>

            <h5>Email</h5>
            <p>contact@gourmetpalace.vn</p>

            <h5>Thời gian hoạt động</h5>
            <p>Thứ 2 - Chủ nhật: 10:00 - 22:00</p>
        </div>

        <div class="col-md-6">
            <h5>Gửi phản hồi</h5>
            <form>
                <div class="mb-3">
                    <label class="form-label">Họ và tên</label>
                    <input type="text" class="form-control" placeholder="Nhập tên của bạn">
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" placeholder="email@example.com">
                </div>
                <div class="mb-3">
                    <label class="form-label">Nội dung</label>
                    <textarea class="form-control" rows="4" placeholder="Nội dung liên hệ..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Gửi phản hồi</button>
            </form>
        </div>
    </div>
</div>
