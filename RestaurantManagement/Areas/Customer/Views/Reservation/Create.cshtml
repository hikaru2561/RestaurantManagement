@model RestaurantManagement.Models.Reservation
@{
    ViewData["Title"] = "Đặt bàn";
    Layout = "_CustomerLayout";
}

<h2 class="mb-4">Đặt bàn</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="DingningTableId" class="form-label">Chọn bàn</label>
        <select asp-for="DingningTableId" class="form-select" asp-items="ViewBag.Tables">
            <option value="">-- Chọn bàn --</option>
        </select>
        <span asp-validation-for="DingningTableId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NumberOfPeople" class="form-label">Số người</label>
        <input asp-for="NumberOfPeople" class="form-control" type="number" min="1" />
        <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ReservationTime" class="form-label">Thời gian đặt</label>
        <input asp-for="ReservationTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="ReservationTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Gửi yêu cầu đặt bàn</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
