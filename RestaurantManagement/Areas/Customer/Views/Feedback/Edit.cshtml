@model RestaurantManagement.Models.Feedback
@{
    ViewData["Title"] = "Sửa phản hồi";
    Layout = "_CustomerLayout";
}

<h2>Sửa phản hồi đơn hàng #@Model.OrderId</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.FeedbackId" />

    <div class="mb-3">
        <label for="content">Nội dung</label>
        <textarea name="content" class="form-control" rows="4" required>@Model.Content</textarea>
    </div>

    <div class="mb-3">
        <label for="rating">Đánh giá (1 đến 5)</label>
        <select name="rating" class="form-select" required>
            @for (int i = 5; i >= 1; i--)
            {
                if (Model.Rating == i)
                {
                    <option value="@i" selected>@i sao</option>
                }
                else
                {
                    <option value="@i">@i sao</option>
                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật phản hồi</button>
</form>
