@model IEnumerable<RestaurantManagement.Models.Feedback>
@{
    ViewData["Title"] = "Phản hồi của tôi";
    Layout = "_CustomerLayout";
}

<h2 class="mb-4">Phản hồi của bạn</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Bạn chưa gửi phản hồi nào.</div>
}
else
{
    <table class="table table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Nội dung</th>
                <th>Đánh giá</th>
                <th>Ảnh đính kèm</th>
                <th>Phản hồi từ nhà hàng</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Content</td>

                    <td>
                        @for (int i = 0; i < item.Rating; i++)
                        {
                            <i class="bi bi-star-fill text-warning"></i>
                        }
                        @for (int i = item.Rating; i < 5; i++)
                        {
                            <i class="bi bi-star text-muted"></i>
                        }
                    </td>

                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="~/images/feedback/@item.ImagePath" width="80" class="img-thumbnail" />
                        }
                        else
                        {
                            <em>Không có</em>
                        }
                    </td>

                    <td>
                        @if (item.Reply != null)
                        {
                            <span>@item.Reply.Content</span>
                            <br />
                            <small class="text-muted fst-italic">
                                (@item.Reply.RepliedAt.ToString("dd/MM/yyyy HH:mm"))
                            </small>
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Chưa có phản hồi</span>
                        }
                    </td>

                    <td>
                        @if (item.Reply == null)
                        {
                            <a asp-action="Edit" asp-route-id="@item.FeedbackId" class="btn btn-sm btn-warning me-1">
                                Sửa
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.FeedbackId" method="post" class="d-inline"
                                  onsubmit="return confirm('Bạn có chắc chắn muốn xoá phản hồi này?');">
                                <button type="submit" class="btn btn-sm btn-danger">Xoá</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">Đã phản hồi</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
