@{
    ViewData["Title"] = "Gửi phản hồi";
    Layout = "_CustomerLayout";
    int orderId = ViewBag.OrderId;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <h2 class="mb-4 fw-bold text-primary text-center">
                <i class="bi bi-chat-square-text me-2"></i>Gửi phản hồi cho đơn hàng #@orderId
            </h2>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Vui lòng kiểm tra lại thông tin:
                    <ul class="mb-0 mt-2">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" novalidate>
                        <input type="hidden" name="orderId" value="@orderId" />

                        <div class="mb-3">
                            <label for="content" class="form-label fw-semibold">📝 Nội dung phản hồi</label>
                            <textarea id="content" name="content" class="form-control rounded-3" rows="5" placeholder="Nhập nội dung phản hồi..." required>@(ViewData["content"] ?? "")</textarea>
                        </div>

                        <div class="mb-4">
                            <label for="rating" class="form-label fw-semibold">⭐ Đánh giá</label>
                            <select id="rating" name="rating" class="form-select rounded-3" required>
                                <option value="">-- Chọn đánh giá --</option>
                                @for (int i = 5; i >= 1; i--)
                                {
                                    var selected = (ViewData["rating"]?.ToString() == i.ToString()) ? "selected" : "";
                                    <option value="@i"selected>@i - @(i == 5 ? "Tuyệt vời 😊" : i == 4 ? "Tốt 😄" : i == 3 ? "Trung bình 😐" : i == 2 ? "Kém 😟" : "Rất kém 😡")</option>
                                }
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Order" asp-action="Details" asp-route-id="@orderId" class="btn btn-secondary rounded-3">
                                <i class="bi bi-arrow-left me-1"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary rounded-3">
                                <i class="bi bi-send me-1"></i>Gửi phản hồi
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
