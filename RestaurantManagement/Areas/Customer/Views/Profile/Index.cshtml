@model RestaurantManagement.Models.Customer

@{
    ViewData["Title"] = "Hồ sơ của bạn";
    Layout = "_CustomerLayout";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4 text-primary"><i class="bi bi-person-circle me-2"></i>Thông tin cá nhân</h2>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">👤 Họ tên</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">📧 Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">📞 Số điện thoại</dt>
                <dd class="col-sm-9">@Model.Phone</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" class="btn btn-warning rounded-3">
            <i class="bi bi-pencil-square me-1"></i>Chỉnh sửa
        </a>
    </div>
</div>
