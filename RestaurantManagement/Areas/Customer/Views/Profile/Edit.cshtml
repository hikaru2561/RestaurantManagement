@model RestaurantManagement.Models.Customer

@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
    Layout = "_CustomerLayout";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4 text-primary"><i class="bi bi-pencil-square me-2"></i>Chỉnh sửa thông tin</h2>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">👤 Họ tên</label>
                    <input asp-for="Name" class="form-control rounded-3" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">📧 Email</label>
                    <input asp-for="Email" class="form-control rounded-3" type="email" required />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-semibold">📞 Số điện thoại</label>
                    <input asp-for="Phone" class="form-control rounded-3" type="tel" required />
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary rounded-3">
                        <i class="bi bi-arrow-left me-1"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary rounded-3">
                        <i class="bi bi-check-circle me-1"></i>Lưu thay đổi
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
