@model int
@{
    ViewData["Title"] = "Gộp bàn";
    Layout = "_StaffLayout";
    var tables = ViewBag.Tables as List<RestaurantManagement.Models.DingningTable>;
    int mainTableId = ViewBag.MainTableId;
}

<h2>Gộp bàn vào bàn @mainTableId</h2>

<form asp-action="Merge" method="post">
    <input type="hidden" name="mainTableId" value="@mainTableId" />

    <div class="mb-3">
        <label class="form-label">Chọn bàn cần gộp:</label>
        <select class="form-select" name="mergeTableId" required>
            <option value="">-- Chọn bàn --</option>
            @foreach (var table in tables)
            {
                <option value="@table.DingningTableId">@table.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Gộp bàn</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
