@{
    ViewData["Title"] = "Gộp bàn";
    Layout = "_StaffLayout";
    var tables = ViewBag.Tables as List<RestaurantManagement.Models.DingningTable>;
    var mainTableId = (int)ViewBag.MainTableId;
}

<partial name="~/Views/Shared/_Notification.cshtml" />

<h2>➕ Gộp bàn</h2>
<p>Gộp đơn hàng của bàn khác vào bàn hiện tại.</p>

<form method="post">
    <input type="hidden" name="mainTableId" value="@mainTableId" />
    <div class="mb-3">
        <label class="form-label">Chọn bàn để gộp:</label>
        <select name="mergeTableId" class="form-select" required>
            <option disabled selected>-- Chọn bàn cần gộp --</option>
            @foreach (var table in tables!)
            {
                <option value="@table.DingningTableId">@table.Name (@(table.IsVIP ? "VIP" : "Thường"))</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Gộp bàn</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
