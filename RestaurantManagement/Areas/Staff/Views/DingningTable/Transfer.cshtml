@{
    ViewData["Title"] = "Chuyển bàn";
    Layout = "_StaffLayout";
    var tables = ViewBag.Tables as List<RestaurantManagement.Models.DingningTable>;
    var fromTableId = (int)ViewBag.FromTableId;
}

<partial name="~/Views/Shared/_Notification.cshtml" />

<h2>🔁 Chuyển bàn</h2>
<p>Chuyển toàn bộ đơn hàng từ bàn hiện tại sang bàn khác</p>

<form method="post">
    <input type="hidden" name="fromTableId" value="@fromTableId" />
    <div class="mb-3">
        <label class="form-label">Chọn bàn chuyển đến:</label>
        <select name="toTableId" class="form-select" required>
            <option disabled selected>-- Chọn bàn trống --</option>
            @foreach (var table in tables!)
            {
                <option value="@table.DingningTableId">@table.Name (@(table.IsVIP ? "VIP" : "Thường"))</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Chuyển bàn</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
