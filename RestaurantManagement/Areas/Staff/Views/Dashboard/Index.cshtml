@{
    ViewData["Title"] = "Trang chính của nhân viên";
    Layout = "_StaffLayout";
}

    <h2>Xin chào, @ViewBag.StaffName!</h2>
    <p><strong>Hôm nay:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h4 class="card-title">Đơn hàng hôm nay</h4>
                    <p class="card-text display-4">@ViewBag.TodayOrders</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h4 class="card-title">Lượt chấm công gần nhất</h4>
                    <p class="card-text">
                        @if (ViewBag.LastAttendance != null)
                        {
                            var att = (RestaurantManagement.Models.Attendance)ViewBag.LastAttendance;
                            @($"Ngày: {att.Date:dd/MM/yyyy} - Ca: {att.Shift}")
                        }
                        else
                        {
                            <span>Chưa có dữ liệu</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>