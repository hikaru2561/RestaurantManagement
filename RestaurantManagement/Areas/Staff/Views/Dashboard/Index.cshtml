@{
    ViewData["Title"] = "Trang chủ nhân viên";
    Layout = "_StaffLayout";
}

<div class="mb-4">
    <h2 class="fw-bold">👋 Xin chào, <span class="text-primary">@User.Identity?.Name</span></h2>
    <p class="text-muted">Chúc bạn một ngày làm việc hiệu quả tại <strong>Gourmet Palace</strong>!</p>
</div>

<div class="row g-4">
    <!-- Đơn hàng hôm nay -->
    <div class="col-md-4">
        <div class="card border-start border-info border-4 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted">Đơn hàng hôm nay</h6>
                    <h3 class="fw-bold text-info">@ViewBag.TodayOrders</h3>
                </div>
                <i class="bi bi-cart-check-fill fs-2 text-info"></i>
            </div>
        </div>
    </div>

    <!-- Bàn đang phục vụ -->
    <div class="col-md-4">
        <div class="card border-start border-warning border-4 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted">Bàn đang sử dụng</h6>
                    <h3 class="fw-bold text-warning">@ViewBag.TablesInUse</h3>
                </div>
                <i class="bi bi-grid-3x3-gap-fill fs-2 text-warning"></i>
            </div>
        </div>
    </div>
</div>


