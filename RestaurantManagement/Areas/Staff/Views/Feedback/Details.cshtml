@model RestaurantManagement.Models.Feedback
@{
    ViewData["Title"] = "Chi tiết phản hồi";
    Layout = "_StaffLayout";
}

<h2 class="mb-3">Chi tiết phản hồi đơn hàng #@Model.OrderId</h2>

<div class="card mb-3">
    <div class="card-body">
        <p><strong>Khách hàng:</strong> @Model.Order.Customer?.Name</p>
        <p><strong>Ngày phản hồi:</strong> @Model.FeedbackTime.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>Số sao:</strong> @Model.Rating / 5</p>
        <p><strong>Nội dung:</strong> @Model.Content</p>
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <p>
                <strong>Ảnh:</strong><br />
                <img src="@Url.Content(Model.ImagePath)" class="img-fluid rounded" style="max-height:300px;" />
            </p>
        }

        @if (Model.Reply != null)
        {
            <hr />
            <h5 class="text-success">✅ Phản hồi từ quản lý:</h5>
            <p>@Model.Reply.Content</p>
            <p class="text-muted"><small>@Model.Reply.RepliedAt.ToString("dd/MM/yyyy HH:mm")</small></p>
        }
        else
        {
            <hr />
            <p class="text-muted fst-italic">Chưa có phản hồi từ quản lý.</p>
        }
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">← Quay lại danh sách</a>
