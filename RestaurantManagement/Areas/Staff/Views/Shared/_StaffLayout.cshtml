@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant Staff</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/restaurant-dashboard.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar bg-light border-end" style="min-width: 240px;">
            <div class="sidebar-header p-3 fw-bold border-bottom">Nhân viên</div>
            <nav class="nav flex-column p-2">
                <a class="nav-link" asp-area="Staff" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-house-door-fill me-2"></i>Trang chủ
                </a>
                <a class="nav-link" asp-area="Staff" asp-controller="Order" asp-action="Index">
                    <i class="bi bi-cart-check-fill me-2"></i>Đơn hàng
                 </a>

                <a class="nav-link" asp-area="Staff" asp-controller="Schedule" asp-action="Index">
                    <i class="bi bi-calendar-check-fill me-2"></i>Lịch làm việc
                </a>
                <a class="nav-link" asp-area="Staff" asp-controller="Profile" asp-action="Index">
                    <i class="bi bi-person-lines-fill me-2"></i>Thông tin cá nhân
                </a>
                <a class="nav-link" asp-area="Staff" asp-controller="Feedback" asp-action="Index">
                    <i class="bi bi-chat-left-text-fill me-2"></i>Phản hồi liên quan
                </a>
                @await Html.PartialAsync("_NotificationPartial")
                <a class="nav-link text-danger" asp-area="" asp-controller="Login" asp-action="Logout">
                    <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                </a>
            </nav>
        </div>

        <!-- Main content -->
        <main class="main-content flex-grow-1">
            <div class="container-fluid p-4">
                @await Html.PartialAsync("_Notification")
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>