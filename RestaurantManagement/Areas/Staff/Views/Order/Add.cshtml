@model RestaurantManagement.Models.Order
@using RestaurantManagement.Models
@{
    ViewData["Title"] = "Tạo đơn hàng";
    Layout = "_StaffLayout";
    var tables = ViewBag.Tables as List<Table>;
    var customers = ViewBag.Customers as List<Customer>;
    var menuItems = ViewBag.MenuItems as List<MenuItem>;
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Add" method="post">
    <div class="mb-3">
        <label asp-for="TableId" class="form-label">Chọn bàn</label>
        <select asp-for="TableId" class="form-select" asp-items="@(new SelectList(tables, "TableId", "Name"))" required>
            <option value="">-- Chọn bàn --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="CustomerId" class="form-label">Chọn khách hàng (nếu có)</label>
        <select asp-for="CustomerId" class="form-select" asp-items="@(new SelectList(customers, "CustomerId", "Name"))">
            <option value="">-- Không có --</option>
        </select>
    </div>

    <div class="mb-4">
        <label class="form-label">Chọn món ăn</label>
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Tên món</th>
                    <th>Giá</th>
                    <th style="width:120px;">Số lượng</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < menuItems.Count; i++)
                {
                    <tr>
                        <td>
                            @menuItems[i].Name
                            <input type="hidden" name="MenuItemIds" value="@menuItems[i].MenuItemId" />
                        </td>
                        <td>@menuItems[i].Price.ToString("N0") đ</td>
                        <td>
                            <input type="number" name="Quantities" value="0" class="form-control" min="0" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Tạo đơn hàng</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
    </div>
</form>
