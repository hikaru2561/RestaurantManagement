@model RestaurantManagement.Models.Order
@{
    ViewData["Title"] = "Thêm món";
    Layout = "_StaffLayout";
}

<h2 class="mb-3">Thêm món vào đơn #@Model.OrderId</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="AddItem" method="post">
    <input type="hidden" name="orderId" value="@Model.OrderId" />

    <div class="mb-3">
        <label class="form-label">Chọn món</label>
        <select name="menuItemId" class="form-select">
            @foreach (var item in (List<RestaurantManagement.Models.MenuItem>)ViewBag.MenuItems)
            {
                <option value="@item.MenuItemId">@item.Name</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Số lượng</label>
        <input type="number" name="quantity" class="form-control" min="1" required />
    </div>

    <button type="submit" class="btn btn-primary">Thêm món</button>
    <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-secondary">Quay lại</a>
</form>
