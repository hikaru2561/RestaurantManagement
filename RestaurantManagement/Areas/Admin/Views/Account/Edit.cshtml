@model RestaurantManagement.Models.Account
@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="fw-bold mb-4">✏️ Chỉnh sửa tài khoản</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow-sm p-4 bg-white">
    <form asp-area="Admin" asp-controller="Account" asp-action="Edit" method="post">
        <input type="hidden" asp-for="AccountId" />

        <div class="mb-3">
            <label class="form-label">Tên đăng nhập</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Vai trò</label>
            <select asp-for="Role" class="form-select">
                <option value="Admin" selected="@(Model.Role == "Admin")">Admin</option>
                <option value="Staff" selected="@(Model.Role == "Staff")">Staff</option>
                <option value="Customer" selected="@(Model.Role == "Customer")">Customer</option>
            </select>
            <span asp-validation-for="Role" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-1"></i> Cập nhật
            </button>
            <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
