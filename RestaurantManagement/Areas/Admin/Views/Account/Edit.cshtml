@model RestaurantManagement.Models.Account
@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (User.IsInRole("Admin"))
{
    <h2>Chỉnh sửa tài khoản</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-area="Admin" asp-controller="Account" asp-action="Edit" method="post">
        <input type="hidden" asp-for="AccountId" />
        <div class="form-group">
            <label>Tên đăng nhập</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Mật khẩu</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Vai trò</label>
            <select asp-for="Role" class="form-control">
                <option value="Admin" selected="@(Model.Role == "Admin")">Admin</option>
                <option value="Staff" selected="@(Model.Role == "Staff")">Staff</option>
                <option value="Customer" selected="@(Model.Role == "Customer")">Customer</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
}
else
{
    <div class="alert alert-danger">Bạn không có quyền truy cập trang này.</div>
}
