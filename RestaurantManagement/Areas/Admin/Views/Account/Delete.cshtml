@model RestaurantManagement.Models.Account
@{
    ViewData["Title"] = "Xóa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (User.IsInRole("Admin"))
{
    <h2>Xác nhận xóa tài khoản</h2>

    <div class="alert alert-warning">
        <strong>Bạn có chắc chắn muốn xóa tài khoản này?</strong>
    </div>

    <div>
        <dl class="row">
            <dt class="col-sm-3">Tên đăng nhập:</dt>
            <dd class="col-sm-9">@Model.Username</dd>

            <dt class="col-sm-3">Vai trò:</dt>
            <dd class="col-sm-9">@Model.Role</dd>
        </dl>
    </div>

    <form asp-area="Admin" asp-controller="Account" asp-action="Delete" method="post">
        <input type="hidden" asp-for="AccountId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
}
else
{
    <div class="alert alert-danger">Bạn không có quyền truy cập trang này.</div>
}
