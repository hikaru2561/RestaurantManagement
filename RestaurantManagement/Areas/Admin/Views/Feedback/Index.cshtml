@model IEnumerable<RestaurantManagement.Models.Feedback>
@{
    ViewData["Title"] = "Quản lý phản hồi";
    Layout = "_AdminLayout";
    var query = Context.Request.Query;
    string ratingFilter = query["rating"];
    string statusFilter = query["status"];
}

<h2 class="mb-4">Danh sách phản hồi</h2>

<form method="get" id="filterForm" class="row g-3 mb-3">
    <div class="col-md-3">
        <select name="rating" class="form-select" onchange="submitFilter()">
            <option value="">-- Lọc theo số sao --</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i" selected="@(ratingFilter == i.ToString())">@i sao</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <select name="status" class="form-select" onchange="submitFilter()">
            <option value="">-- Trạng thái --</option>
            <option value="Replied" selected="@(statusFilter == "Replied")">Đã phản hồi</option>
            <option value="Pending" selected="@(statusFilter == "Pending")">Chưa phản hồi</option>
        </select>
    </div>

    <div class="col-md-3 text-end">
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-light">← Quay lại</a>
    </div>
</form>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr class="text-center">
            <th>Khách hàng</th>
            <th>Đơn hàng</th>
            <th>Đánh giá</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fb in Model)
        {
            <tr>
                <td>@fb.Order.Customer.Name</td>
                <td>#@fb.Order?.OrderId</td>
                <td class="text-center">@fb.Rating / 5</td>
                <td class="text-center">
                    @if (fb.Reply != null)
                    {
                        <span class="badge bg-success">Đã phản hồi</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Chưa phản hồi</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@fb.FeedbackId" class="btn btn-sm btn-info">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@fb.FeedbackId"
                       onclick="return confirm('Xác nhận xoá phản hồi này?')"
                       class="btn btn-sm btn-danger">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function submitFilter() {
        document.getElementById("filterForm").submit();
    }
</script>
