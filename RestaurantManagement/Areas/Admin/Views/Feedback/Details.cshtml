@model RestaurantManagement.Models.Feedback
@{
    ViewData["Title"] = "Chi tiết phản hồi";
    Layout = "_AdminLayout";
}

<h2 class="mb-4">Chi tiết phản hồi</h2>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Thông tin khách hàng</h5>
        <p><strong>Họ tên:</strong> @Model.Order.Customer?.Name</p>
        <p><strong>Đơn hàng:</strong> #@Model.Order?.OrderId</p>
        <p><strong>Thời gian đặt:</strong> @Model.Order.OrderTime.ToString("HH:mm dd/MM/yyyy")</p>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Nội dung phản hồi</h5>
        <p><strong>Đánh giá:</strong> <span class="text-warning">@Model.Rating / 5 ⭐</span></p>
        <p><strong>Nội dung:</strong> @Model.Content</p>
    </div>
</div>

@if (Model.Reply != null)
{
    <div class="card mb-4 border-success">
        <div class="card-body">
            <h5 class="card-title text-success">Phản hồi của quản lý</h5>
            <p>@Model.Reply.Content</p>
            <p><small class="text-muted">Trả lời lúc: @Model.Reply.RepliedAt.ToString("HH:mm dd/MM/yyyy")</small></p>
        </div>
    </div>
}
else
{
    <a asp-action="Reply" asp-route-id="@Model.FeedbackId" class="btn btn-primary">Trả lời phản hồi</a>
}

<a asp-action="Index" class="btn btn-secondary">← Quay lại</a>
