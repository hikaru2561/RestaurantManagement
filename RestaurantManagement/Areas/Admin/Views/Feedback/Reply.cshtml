@model RestaurantManagement.Models.Feedback
@{
    ViewData["Title"] = "Phản hồi khách hàng";
    Layout = "_AdminLayout";
}

<h2 class="mb-4">Phản hồi khách hàng</h2>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Thông tin khách hàng</h5>
        <p><strong>Họ tên:</strong> @Model.Order.Customer?.Name</p>
        <p><strong>Đơn hàng:</strong> #@Model.Order?.OrderId</p>
        <p><strong>Đánh giá:</strong> @Model.Rating / 5</p>
        <p><strong>Nội dung:</strong> @Model.Content</p>
    </div>
</div>

<form asp-action="Reply" method="post">
    <input type="hidden" name="feedbackId" value="@Model.FeedbackId" />

    <div class="mb-3">
        <label class="form-label">Nội dung phản hồi</label>
        <textarea name="content" rows="4" class="form-control" placeholder="Nhập nội dung phản hồi..."></textarea>
    </div>

    <button type="submit" class="btn btn-success">Gửi phản hồi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
