@model RestaurantManagement.Models.InventoryUsage
@{
    ViewData["Title"] = "Chỉnh sửa nguyên liệu sử dụng";
    Layout = "_AdminLayout";
}

<h2>Chỉnh sửa nguyên liệu sử dụng</h2>

<form asp-area="Admin" asp-action="Edit">
    <input type="hidden" asp-for="InventoryUsageId" />
    <input type="hidden" asp-for="MenuItemId" />

    <div class="form-group">
        <label asp-for="InventoryItemId" class="control-label">Nguyên liệu</label>
        <select asp-for="InventoryItemId" class="form-control" asp-items="ViewBag.InventoryItemId"></select>
    </div>

    <div class="form-group">
        <label asp-for="QuantityUsed" class="control-label">Số lượng</label>
        <input asp-for="QuantityUsed" class="form-control" />
        <span asp-validation-for="QuantityUsed" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-area="Admin" asp-action="Index" asp-route-menuItemId="@Model.MenuItemId" class="btn btn-secondary">Quay lại</a>
</form>
