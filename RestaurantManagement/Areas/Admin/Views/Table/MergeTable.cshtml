@{
    ViewData["Title"] = "Gộp bàn";
    Layout = "_AdminLayout";
}

<h2>Gộp đơn hàng từ bàn: @ViewBag.SourceTableName</h2>

<form asp-area="Admin" asp-action="MergeTable" method="post">
    <input type="hidden" name="sourceTableId" value="@ViewBag.SourceTableId" />

    <div class="form-group">
        <label for="targetTableId">Chọn bàn đích để gộp vào:</label>
        <select class="form-control" name="targetTableId" required>
            <option value="">-- Chọn bàn --</option>
            @foreach (var table in (List<RestaurantManagement.Models.Table>)ViewBag.AvailableTargetTables)
            {
                <option value="@table.TableId">@table.Name (Sức chứa: @table.Capacity)</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Xác nhận gộp bàn</button>
    <a asp-area="Admin" asp-action="Index" class="btn btn-secondary mt-3">Huỷ</a>
</form>
