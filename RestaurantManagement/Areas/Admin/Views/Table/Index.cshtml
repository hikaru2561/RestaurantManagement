@model IEnumerable<RestaurantManagement.Models.DingningTable>
@using RestaurantManagement.Models
@{
    ViewData["Title"] = "Danh sách bàn";
    Layout = "_AdminLayout";
}

<h2>Danh sách bàn</h2>

<form id="filterForm" method="get" class="form-inline mb-3">
    <input type="text" name="search" class="form-control mr-2"
           placeholder="Tìm theo tên bàn..." value="@Context.Request.Query["search"]"
           oninput="submitFilter()" />

    <select name="statusFilter" class="form-control mr-2" onchange="submitFilter()">
        <option value="">-- Tất cả trạng thái --</option>
        <option value="Available" selected="@(Context.Request.Query["statusFilter"] == "Available")">Trống</option>
        <option value="Occupied" selected="@(Context.Request.Query["statusFilter"] == "Occupied")">Đang sử dụng</option>
        <option value="Reserved" selected="@(Context.Request.Query["statusFilter"] == "Reserved")">Đã đặt</option>
    </select>

    <select name="vipFilter" class="form-control mr-2" onchange="submitFilter()">
        <option value="">-- Tất cả bàn --</option>
        <option value="true" selected="@(Context.Request.Query["vipFilter"] == "True")">VIP</option>
        <option value="false" selected="@(Context.Request.Query["vipFilter"] == "False")">Thường</option>
    </select>
</form>

<div class="mb-3">
    <a asp-area="Admin" asp-action="Create" class="btn btn-success">+ Thêm bàn</a>
    <a asp-area="Admin" asp-action="MergeTable" class="btn btn-info">Gộp bàn</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên bàn</th>
            <th>VIP</th>
            <th>Trạng thái</th>
            <th>Sức chứa</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var table in Model)
        {
            <tr>
                <td>@table.Name</td>
                <td>@(table.IsVIP ? "Có" : "Không")</td>
                <td>
                    @{
                        string statusText = table.Status switch
                        {
                            TableStatus.Available => "Trống",
                            TableStatus.InUse => "Đang sử dụng",
                            TableStatus.Reserved => "Đã đặt",
                            _ => "Không rõ"
                        };
                    }
                    @statusText
                </td>
                <td>@table.Capacity</td>
                <td>
                    <a asp-area="Admin" asp-action="Edit" asp-route-id="@table.DingningTableId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-area="Admin" asp-action="Delete" asp-route-id="@table.DingningTableId" class="btn btn-danger btn-sm">Xoá</a>
                    <a asp-area="Admin" asp-action="Details" asp-route-id="@table.DingningTableId" class="btn btn-info btn-sm">Chi tiết</a>

                    @if (table.Status == TableStatus.InUse)
                    {
                        <a asp-area="Admin" asp-action="InitSplitTable" asp-route-id="@table.DingningTableId" class="btn btn-secondary btn-sm mt-1">Tách bàn</a>
                        <a asp-area="Admin" asp-action="InitChangeTable" asp-route-id="@table.DingningTableId" class="btn btn-warning btn-sm mt-1">Chuyển bàn</a>
                        <a asp-area="Admin" asp-action="MergeTable" asp-route-sourceTableId="@table.DingningTableId" class="btn btn-sm btn-outline-success">Gộp bàn</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-light">← Quay lại</a>

@section Scripts {
    <script>
        let timer;
        function submitFilter() {
            clearTimeout(timer);
            timer = setTimeout(() => {
                document.getElementById('filterForm').submit();
            }, 300);
        }
    </script>
}
