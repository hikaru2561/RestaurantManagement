@model RestaurantManagement.Models.DingningTable
@{
    ViewData["Title"] = "Xoá bàn";
    Layout = "_AdminLayout";
}
<h2>Xoá bàn</h2>
<h4>Bạn có chắc chắn muốn xoá bàn sau?</h4>

<dl class="row">
    <dt class="col-sm-2">Tên bàn</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Sức chứa</dt>
    <dd class="col-sm-10">@Model.Capacity</dd>

    <dt class="col-sm-2">VIP</dt>
    <dd class="col-sm-10">@(Model.IsVIP ? "Có" : "Không")</dd>
</dl>

<form asp-area="Admin" asp-action="Delete">
    <input type="hidden" asp-for="DingningTableId" />
    <button type="submit" class="btn btn-danger">Xoá</button>
    <a asp-area="Admin" asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>
