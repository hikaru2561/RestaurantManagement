@model RestaurantManagement.Models.DingningTable
@{
    ViewData["Title"] = "Chi tiết bàn";
    Layout = "_AdminLayout";
}
<h2>Chi tiết bàn: @Model.Name</h2>

<dl class="row">
    <dt class="col-sm-2">Tên bàn:</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">VIP:</dt>
    <dd class="col-sm-10">@(Model.IsVIP ? "Có" : "Không")</dd>

    <dt class="col-sm-2">Trạng thái:</dt>
    <dd class="col-sm-10">
        @{
            string statusText = Model.Status switch
            {
                TableStatus.Available => "Trống",
                TableStatus.InUse => "Đang sử dụng",
                TableStatus.Reserved => "Đã được đặt",
                _ => "Không rõ"
            };
        }
        @statusText
    </dd>

    <dt class="col-sm-2">Sức chứa:</dt>
    <dd class="col-sm-10">@Model.Capacity</dd>
</dl>

<a asp-area="Admin" asp-action="Edit" asp-route-id="@Model.DingningTableId" class="btn btn-warning">Sửa</a>
<a asp-area="Admin" asp-action="Index" class="btn btn-secondary">Quay lại</a>
