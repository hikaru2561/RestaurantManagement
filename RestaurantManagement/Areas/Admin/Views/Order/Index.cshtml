@model IEnumerable<RestaurantManagement.Models.Order>
@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "_AdminLayout";
}

<h2>Danh sách đơn hàng</h2>

<form method="get" id="filterForm" class="row g-3 mb-3">
    <div class="col-md-3">
        <input type="text" name="searchTable" value="@Context.Request.Query["searchTable"]" class="form-control" placeholder="Tìm theo bàn..." oninput="submitForm()" />
    </div>
    <div class="col-md-3">
        <select name="statusFilter" class="form-select" onchange="submitForm()">
            <option value="">-- Trạng thái --</option>
            @foreach (var status in Enum.GetValues(typeof(RestaurantManagement.Models.OrderStatus)))
            {
                <option value="@status" selected="@(Context.Request.Query["statusFilter"] == status.ToString())">@status</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <input type="date" name="dateFilter" value="@Context.Request.Query["dateFilter"]" class="form-control" onchange="submitForm()" />
    </div>
    <div class="col-md-3 text-end">
        <a asp-area="Admin" asp-action="Create" class="btn btn-success">Tạo đơn mới</a>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Bàn</th>
            <th>Nhân viên</th>
            <th>Khách hàng</th>
            <th>Thời gian</th>
            <th>Trạng thái</th>
            <th>Món đã gọi</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.DingningTable?.Name</td>
                <td>@o.Staff?.Name</td>
                <td>@o.Customer?.Name</td>
                <td>@o.OrderTime.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@o.Status</td>
                <td>
                    <ul>
                        @foreach (var item in o.OrderItems)
                        {
                            <li>@item.MenuItem?.Name (x@item.Quantity)</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-area="Admin" asp-action="Details" asp-route-id="@o.OrderId" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-area="Admin" asp-action="Edit" asp-route-id="@o.OrderId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-area="Admin" asp-action="Delete" asp-route-id="@o.OrderId" class="btn btn-danger btn-sm">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-light">← Quay lại</a>

<script>
    function submitForm() {
        clearTimeout(window.submitTimeout);
        window.submitTimeout = setTimeout(() => {
            document.getElementById("filterForm").submit();
        }, 300);
    }
</script>
