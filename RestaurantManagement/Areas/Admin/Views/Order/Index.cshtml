@model IEnumerable<RestaurantManagement.Models.Order>
@using RestaurantManagement.Models
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "_AdminLayout";
}

<h2 class="mb-4">Quản lý đơn hàng</h2>

<form method="get" id="filterForm" class="row gy-2 gx-3 align-items-center mb-3">
    <div class="col-md-3">
        <input type="text" name="searchTable" value="@Context.Request.Query["searchTable"]" class="form-control" placeholder="Tìm theo bàn..." oninput="submitForm()" />
    </div>
    <div class="col-md-3">
        <select name="statusFilter" class="form-select" onchange="submitForm()">
            <option value="">-- Trạng thái --</option>
            @foreach (var status in Enum.GetValues(typeof(OrderStatus)))
            {
                <option value="@status" selected="@(Context.Request.Query["statusFilter"] == status.ToString())">@status</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <input type="date" name="dateFilter" value="@Context.Request.Query["dateFilter"]" class="form-control" onchange="submitForm()" />
    </div>
    <div class="col-md-3 text-end">
        <a asp-area="Admin" asp-action="Create" class="btn btn-success">+ Tạo đơn mới</a>
    </div>
</form>

<table class="table table-hover table-bordered align-middle text-center">
    <thead class="table-light">
        <tr>
            <th>Bàn</th>
            <th>Nhân viên</th>
            <th>Khách hàng</th>
            <th>Thời gian</th>
            <th>Trạng thái</th>
            <th>Món đã gọi</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-muted text-center">Không có đơn hàng nào.</td>
            </tr>
        }
        else
        {
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.DingningTable?.Name</td>
                    <td>@o.Staff?.Name</td>
                    <td>@o.Customer?.Name</td>
                    <td>@o.OrderTime.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <span class="badge
                            @(o.Status == OrderStatus.Ordered ? "bg-secondary" :
                              o.Status == OrderStatus.Preparing ? "bg-warning text-dark" :
                              o.Status == OrderStatus.Paid ? "bg-success" :
                              o.Status == OrderStatus.Canceled ? "bg-danger" :
                              o.Status == OrderStatus.Completed ? "bg-primary" : "bg-light")">
                            @o.Status
                        </span>
                    </td>
                    <td class="text-start">
                        <ul class="mb-0 ps-3">
                            @foreach (var item in o.OrderItems ?? new List<OrderItem>())
                            {
                                <li>@item.MenuItem?.Name (@item.Quantity)</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <a asp-area="Admin" asp-action="Details" asp-route-id="@o.OrderId" class="btn btn-info btn-sm">Chi tiết</a>
                        <a asp-area="Admin" asp-action="Edit" asp-route-id="@o.OrderId" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-area="Admin" asp-action="Delete" asp-route-id="@o.OrderId" class="btn btn-danger btn-sm">Xoá</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-light">← Quay lại</a>

@section Scripts {
    <script>
        function submitForm() {
            clearTimeout(window.submitTimeout);
            window.submitTimeout = setTimeout(() => {
                document.getElementById("filterForm").submit();
            }, 300);
        }
    </script>
}
