@model RestaurantManagement.Models.Order
@{
    ViewData["Title"] = "Xoá đơn hàng";
    Layout = "_AdminLayout";
}

<h2>Bạn có chắc chắn muốn xoá đơn hàng #@Model.OrderId?</h2>

<form asp-area="Admin" asp-action="Delete" method="post">
    <input type="hidden" asp-for="OrderId" />
    <button type="submit" class="btn btn-danger">Xoá</button>
    <a asp-area="Admin" asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>
