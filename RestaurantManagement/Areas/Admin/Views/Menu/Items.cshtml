@model IEnumerable<RestaurantManagement.Models.MenuItem>
@{
    ViewData["Title"] = "Danh sách món ăn";
    Layout = "_AdminLayout";
}

<h2>Món ăn thuộc danh mục: @ViewBag.CategoryName</h2>

<input type="text" id="searchItemBox" placeholder="Tìm món ăn..." class="form-control mb-3" />

<a asp-area="Admin" asp-controller="MenuItem" asp-action="Create" asp-route-id="@ViewBag.CategoryId" class="btn btn-success mb-3">+ Thêm món mới</a>

<table class="table table-bordered" id="itemTable">
    <thead>
        <tr>
            <th>Tên món</th>
            <th>Giá</th>
            <th>Trạng thái</th>
            <th>Ảnh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="itemName">@item.Name</td>
                <td>@item.Price.ToString("N0") đ</td>
                <td>@(item.Status ? "Còn bán" : "Ngừng bán")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="~/images/MenuItem/@item.ImagePath?v=@DateTime.Now.Ticks" width="100" />
                    }
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="MenuItem" asp-action="Edit" asp-route-id="@item.MenuItemId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-area="Admin" asp-controller="MenuItem" asp-action="Delete" asp-route-id="@item.MenuItemId" class="btn btn-danger btn-sm">Xoá</a>
                    <a asp-area="Admin" asp-controller="MenuItem" asp-action="Details" asp-route-id="@item.MenuItemId" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-area="Admin" asp-controller="InventoryUsage" asp-action="Index" asp-route-menuItemId="@item.MenuItemId" class="btn btn-secondary btn-sm">Nguyên liệu</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="Admin" asp-action="Index" class="btn btn-light">← Quay lại danh mục</a>

@section Scripts {
    <script>
        const searchInput = document.getElementById("searchItemBox");
        const itemRows = document.querySelectorAll("#itemTable tbody tr");

        searchInput.addEventListener("input", function () {
            const keyword = this.value.toLowerCase();
            itemRows.forEach(row => {
                const name = row.querySelector(".itemName").textContent.toLowerCase();
                row.style.display = name.includes(keyword) ? "" : "none";
            });
        });
    </script>
}
