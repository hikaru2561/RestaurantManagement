@model IEnumerable<RestaurantManagement.Models.MenuCategory>
@{
    ViewData["Title"] = "Danh mục món ăn";
    Layout = "_AdminLayout";
}

<h2>Danh mục món ăn</h2>

<a asp-area="Admin" asp-controller="MenuCategory" asp-action="Index" class="btn btn-primary mb-3">Quản lý danh mục</a>

<input type="text" id="searchBox" placeholder="Tìm danh mục..." class="form-control mb-3" />

<table class="table table-bordered" id="categoryTable">
    <thead>
        <tr>
            <th>Tên danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td class="name">@category.Name</td>
                <td>
                    <a asp-area="Admin" asp-action="Items" asp-route-id="@category.MenuCategoryId" class="btn btn-info btn-sm">Xem món</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-light">← Quay lại</a>

@section Scripts {
    <script>
        const searchBox = document.getElementById("searchBox");
        const rows = document.querySelectorAll("#categoryTable tbody tr");

        searchBox.addEventListener("input", function () {
            const keyword = this.value.toLowerCase();
            rows.forEach(row => {
                const name = row.querySelector(".name").textContent.toLowerCase();
                row.style.display = name.includes(keyword) ? "" : "none";
            });
        });
    </script>
}
