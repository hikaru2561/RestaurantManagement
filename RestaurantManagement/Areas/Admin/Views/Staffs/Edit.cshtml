@model RestaurantManagement.Models.Staffs
@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
    Layout = "_AdminLayout";
}

<h2>Chỉnh sửa nhân viên</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-area="Admin" asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="StaffId" />
    <input type="hidden" asp-for="ImagePath" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Tên</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Số điện thoại</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ảnh mới (nếu muốn thay)</label>
        <input type="file" name="imageFile" class="form-control" accept="image/*" onchange="previewImage(this)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Ảnh hiện tại:</label><br />
        <img id="previewImg" src="~/images/Staffs/@Model.ImagePath" width="150" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-area="Admin" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

<script>
    function previewImage(input) {
        const preview = document.getElementById('previewImg');
        const file = input.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    }
</script>
