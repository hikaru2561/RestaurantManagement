@model RestaurantManagement.Models.Customer
@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "_AdminLayout";
}

<h2>📄 Chi tiết khách hàng</h2>

<dl class="row">
    <dt class="col-sm-2">Tên</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">SĐT</dt>
    <dd class="col-sm-10">@Model.Phone</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Khách VIP</dt>
    <dd class="col-sm-10">@Model.IsVIP</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning">Sửa</a>
<a asp-action="Delete" asp-route-id="@Model.CustomerId" class="btn btn-danger">Xóa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
