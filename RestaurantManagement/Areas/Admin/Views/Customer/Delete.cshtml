@model RestaurantManagement.Models.Customer
@{
    ViewData["Title"] = "Xoá khách hàng";
    Layout = "_AdminLayout";
}

<h2 class="text-danger">⚠️ Xác nhận xoá khách hàng</h2>

<div class="alert alert-warning">Bạn có chắc chắn muốn xoá khách hàng <strong>@Model.Name</strong> không?</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="CustomerId" />
    <button type="submit" class="btn btn-danger">Xoá</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>
