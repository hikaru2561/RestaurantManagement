@model RestaurantManagement.Models.Shift
@{
    ViewData["Title"] = "Chỉnh sửa ca làm";
    Layout = "_AdminLayout";
}

<h2>Chỉnh sửa ca làm</h2>
<form asp-area="Admin" asp-action="Edit" method="post">
    <input type="hidden" asp-for="ShiftId" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Tên ca</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="StartTime" class="form-label">Giờ bắt đầu</label>
        <input asp-for="StartTime" class="form-control" type="time" />
    </div>
    <div class="mb-3">
        <label asp-for="EndTime" class="form-label">Giờ kết thúc</label>
        <input asp-for="EndTime" class="form-control" type="time" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-area="Admin" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
