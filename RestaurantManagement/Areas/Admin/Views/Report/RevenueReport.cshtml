@{
    ViewData["Title"] = "Báo cáo doanh thu";
    Layout = "_AdminLayout";
}

<h2 class="mb-4">📈 Báo cáo doanh thu</h2>

<table class="table table-bordered text-center">
    <thead class="table-light">
        <tr>
            <th>Ngày</th>
            <th>Số đơn</th>
            <th>Doanh thu (VNĐ)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (List<(DateTime Date, int Count, decimal Revenue)>)ViewBag.Report)
        {
            <tr>
                <td>@item.Date.ToString("dd/MM/yyyy")</td>
                <td>@item.Count</td>
                <td>@item.Revenue.ToString("N0")</td>
            </tr>
        }
    </tbody>
</table>
