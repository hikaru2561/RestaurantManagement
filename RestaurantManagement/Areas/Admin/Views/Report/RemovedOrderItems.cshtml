@model List<RestaurantManagement.Models.OrderItemHistory>
@{
    ViewData["Title"] = "Lịch sử món bị gỡ khỏi đơn hàng";
    Layout = "_AdminLayout";
}

<h2 class="mt-3">Lịch sử món bị gỡ khỏi đơn hàng</h2>

<table class="table table-bordered table-hover mt-3">
    <thead class="table-dark">
        <tr>
            <th>Đơn hàng</th>
            <th>Món ăn</th>
            <th>Số lượng</th>
            <th>Thời gian gỡ</th>
            <th>Người thực hiện</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>#@item.OrderId</td>
                <td>@item.MenuItemName</td>
                <td>@item.Quantity</td>
                <td>@item.RemovedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.RemovedBy</td>
            </tr>
        }
    </tbody>
</table>
