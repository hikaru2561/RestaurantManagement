@model IEnumerable<RestaurantManagement.Models.OrderItemHistory>
@{
    ViewData["Title"] = "Món ăn bị xoá";
    Layout = "_AdminLayout";
}

<h2 class="fw-bold mb-3">❌ Món ăn bị xoá khỏi đơn hàng</h2>

<table class="table table-striped table-bordered">
    <thead class="table-warning">
        <tr>
            <th>Đơn hàng</th>
            <th>Tên món</th>
            <th>Số lượng</th>
            <th>Thời gian xoá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.MenuItemName</td>
                <td>@item.Quantity</td>
                <td>@item.RemovedAt.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
