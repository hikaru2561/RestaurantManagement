@{
    ViewData["Title"] = "Báo cáo trạng thái đơn hàng";
    Layout = "_AdminLayout";
}

<h2>Thống kê đơn hàng theo trạng thái</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Trạng thái</th>
            <th>Số lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Data)
        {
            <tr>
                <td>@item.Status</td>
                <td>@item.Count</td>
            </tr>
        }
    </tbody>
</table>
