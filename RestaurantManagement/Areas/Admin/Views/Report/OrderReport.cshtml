@{
    ViewData["Title"] = "Báo cáo đơn hàng";
    Layout = "_AdminLayout";
}

<h2 class="mb-4">📋 Báo cáo đơn hàng theo trạng thái</h2>

<table class="table table-bordered text-center">
    <thead class="table-light">
        <tr>
            <th>Trạng thái</th>
            <th>Số lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (List<(string Status, int Count)>)ViewBag.OrderStatusReport)
        {
            <tr>
                <td>@item.Status</td>
                <td>@item.Count</td>
            </tr>
        }
    </tbody>
</table>
