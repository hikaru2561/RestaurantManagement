@{
    ViewData["Title"] = "Báo cáo nhân viên";
    Layout = "_AdminLayout";
}

<h2 class="mb-4">👨‍🍳 Hiệu suất phục vụ nhân viên</h2>

<table class="table table-bordered text-center">
    <thead class="table-light">
        <tr>
            <th>Nhân viên</th>
            <th>Số đơn đã phục vụ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (List<(string Name, int OrderCount)>)ViewBag.StaffOrders)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.OrderCount</td>
            </tr>
        }
    </tbody>
</table>
