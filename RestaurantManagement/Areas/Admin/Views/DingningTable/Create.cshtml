@model RestaurantManagement.Models.DingningTable
@{
    ViewData["Title"] = "Thêm bàn mới";
    Layout = "_AdminLayout";
}

<h2 class="mb-4">➕ Thêm bàn mới</h2>

<form asp-area="Admin" asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Tên bàn</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Sức chứa</label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsVIP" class="form-check-input" />
        <label class="form-check-label" asp-for="IsVIP">Bàn VIP</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Trạng thái</label>
        <select asp-for="Status" class="form-select">
            <option value="Available">Trống</option>
            <option value="InUse">Đang sử dụng</option>
            <option value="Reserved">Đã đặt</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-area="Admin" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
