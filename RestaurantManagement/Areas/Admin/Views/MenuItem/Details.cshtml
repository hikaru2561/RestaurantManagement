@model RestaurantManagement.Models.MenuItem
@{
    ViewData["Title"] = "Chi tiết món ăn";
    Layout = "_AdminLayout";
}

<h2>Chi tiết món ăn</h2>

<dl class="row">
    <dt class="col-sm-2">Tên món</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Giá</dt>
    <dd class="col-sm-10">@Model.Price.ToString("N0") đ</dd>

    <dt class="col-sm-2">Trạng thái</dt>
    <dd class="col-sm-10">@(Model.Status ? "Còn bán" : "Ngừng bán")</dd>

    <dt class="col-sm-2">Danh mục</dt>
    <dd class="col-sm-10">@Model.MenuCategory?.Name</dd>

    <dt class="col-sm-2">Ảnh món</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="~/images/MenuItem/@Model.ImagePath?@DateTime.Now.Ticks" width="150" />
        }
    </dd>
</dl>

<a asp-area="Admin" asp-controller="Menu" asp-action="Items" asp-route-id="@Model.MenuCategoryId" class="btn btn-secondary">Quay lại</a>
